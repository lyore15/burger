<div class="jumbotron">
    <h1>Eat Yo Burger!</h1>
    <br>
    <h3>Hungry?</h3>
    <br>
    {{!-- Create a button in index.handlebars that will submit the user input into the database. --}}
    <form class="create-form">
        <div class="form-group">
            <label for="newburger" id="color-override">New Burger:</label>
            <input type="text" id="newburger" name="burger">
            {{!-- Create a button in index.handlebars that will submit the user input into the database. --}}
            <button type="submit" class="btn btn-success">Add Burger!<span class="fa fa-thumbs-up"></span></button>
        </div>
    </form>
</div>
<div class="row">
    <div class="col" id="newBurger">Burgers to eat</div>
    <ul>
        {{#each burgers}}
        {{#unless devoured}}
        <span><strong> {{this.id}} - {{this.burger_name}} </strong></span>
        <button type="submit" class="eatburger btn btn-warning" id="eatburger" data-id="{{this.id}}"
            data-newDevoured="{{devour}}"><span class="fa fa-cutlery"></span></button>
        <hr>
        {{/unless}}
        {{/each}}
    </ul>

    <div class="col" id="devour">Devoured Burgers</div>
    <ul>
        {{#each burgers}}
        {{#if devoured}}
        <span><strong> {{this.id}} - {{this.burger_name}} </strong></span>
        <hr>
        {{/if}}
        {{/each}}
    </ul>
</div>